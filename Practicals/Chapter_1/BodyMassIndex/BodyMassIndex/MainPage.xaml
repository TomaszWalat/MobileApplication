<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="BodyMassIndex.MainPage">

    <StackLayout Orientation="Vertical">
        <!-- Place new controls here -->
        <!--<Label Text="Welcome to Xamarin.Forms!"--> 
           <!--HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />-->

        <Label
            Text="BMI Estimate"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="0,0,0,20"
            FontSize="Large"
        />
        
        <Image 
            Source="heart"
            HeightRequest="100"
            Aspect="AspectFit"
            HorizontalOptions="Center"
            VerticalOptions="Start"
        />

        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start" Padding="40,0,40,0">
            <Label
                Text="Height (m)"
                HorizontalOptions="Start"
                VerticalOptions="Center"
            />

            <Entry
                Text="Enter height in meters"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                HorizontalTextAlignment="End"
                Keyboard="Numeric"
                TextChanged="Handle_HeightAsync"
            />

            <Label
                Text="*"
                HorizontalOptions="End"
                VerticalOptions="Center"
                x:Name="HeightErrorLabel"
            />
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start" Padding="40,0,40,0">
            <Label
                Text="Weight (kg)"
                HorizontalOptions="Start"
                VerticalOptions="Center"
            />

            <Entry
                Text="Enter weight in kg"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                HorizontalTextAlignment="End"
                Keyboard="Numeric"
                TextChanged="Handle_WeightAsync"
            />

            <Label
                Text="*"
                HorizontalOptions="End"
                VerticalOptions="Center"
                x:Name="WeightErrorLabel"
            />
        </StackLayout>

        <Label
            Text="Please enter a numerical value" 
            HorizontalOptions="Center"
            Margin="0,20,0,0"
            x:Name="ErrorLabel"
        />

        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
            <Label
                Text="BMI: "
                HorizontalOptions="EndAndExpand"
                FontSize="Large"
                x:Name="BmiLabel"
            />
            
            <Label
                Text="..."
                HorizontalOptions="StartAndExpand"
                FontSize="Large"
                x:Name="OutputLabel"
            />
        </StackLayout>
        
    </StackLayout>

</ContentPage>
